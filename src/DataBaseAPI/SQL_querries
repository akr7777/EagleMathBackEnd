-- Создаем таблицы пользователей и заполняем тестовыми данными
DROP TABLE users;
CREATE TABLE users (
    id varchar(255),
    name varchar(255),
    email varchar(255),
    isadmin boolean NOT NULL,
    photo varchar(255),
    password varchar(255)
);
