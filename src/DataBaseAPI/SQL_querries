DROP TABLE categories;
DROP TABLE materials;
DROP TABLE tasks;

--Создаем таблицы:

CREATE TABLE categories (
    id varchar(255),
    parentId varchar(255),
    label varchar(255)
    --items: varchar
);
CREATE TABLE materials (
    id varchar(255),
    parentId varchar(255),
    label varchar(255),
    content varchar
);

CREATE TABLE tasks (
    id varchar(255),
    parentId varchar(255),
    label varchar(255),
    content varchar
);


