-- Создаем таблицы пользователей и заполняем тестовыми данными
DROP TABLE users;
CREATE TABLE users (
    id varchar(255),
    name varchar(255),
    email varchar(255),
    isadmin boolean NOT NULL,
    password varchar(255)
);
INSERT INTO users (id, name, email, isAdmin, password) VALUES ('001', 'admin', 'admin@admin.com', true, '111');
